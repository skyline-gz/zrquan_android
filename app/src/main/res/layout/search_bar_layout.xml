<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/searchbar"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/ly_left"
        android:background="@drawable/searchbar_textfield_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_bar_height"
        android:paddingLeft="8dp">

        <ImageView
            android:id="@id/iv_search_icon"
            android:background="@drawable/searchbar_left_icon_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--<ImageView-->
            <!--android:id="@id/iv_search_down_arrow"-->
            <!--android:paddingLeft="8.0dip"-->
            <!--android:paddingTop="6.0dip"-->
            <!--android:paddingBottom="6.0dip"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->

        <EditText
            android:textSize="14.0sp"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@id/tv_search_keyword"
            android:background="@null"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/search_bar_height"
            android:layout_marginLeft="8.0dip"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionSearch" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_btnclear"
        android:paddingLeft="30.0dip"
        android:paddingRight="12.0dip"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/search_bar_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@id/btn_clear"
            android:visibility="gone"
            android:src="@drawable/search_clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>